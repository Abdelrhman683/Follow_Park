<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Follow_Park" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0265B3</item>
        <item name="colorPrimaryVariant">#00B0FF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item>

        <item name="colorError">#b00020</item>
        <item name="colorOnError">#FFFFFF</item>
as
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
    </style>

    <style name="Theme.Follow_Park.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="loginButton">
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>



    <style name="button">
        <item name="android:background">@drawable/button_corner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">@dimen/newMoreTextSize</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:paddingLeft">5dp</item>
    </style>



    <style name="viewParent.headerText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/newMoreTextSize</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/white</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/black</item>
    </style>

    <dimen name="headerTextSize">25sp</dimen>
    <dimen name="newMoreTextSize">12sp</dimen>
    <dimen name="loginViewMargin">20dp</dimen>


    <style name="Theme.Follow_Park.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Follow_Park.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>